@using ParkingZoneApp.Enums
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ParkingZoneApp.ViewModels.ParkingSlotVMs.DetailsVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details of Parking Slot</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.IsAvailable ? "Available" : "Not Available")
        </dd>
    </dl>
</div>
<div>
    <div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" asp-route-zoneId="@Model.ParkingZoneId" class="btn btn-secondary">Back</a>
</div>
