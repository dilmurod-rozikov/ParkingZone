@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ParkingZoneApp.ViewModels.PaymentVMs.PaymentVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Make Payment</h4>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Home", new { area = "" })';
        }, 3000);
    </script>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakePayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label asp-for="CardName" class="control-label">Card Name</label>
                    <input asp-for="CardName" class="form-control" min="1" />
                    <span asp-validation-for="CardName" class="text-danger"></span>
                </div>
                <br />
                <div>
                    <label asp-for="CardNumber" class="control-label">CardNumber</label>
                    <input asp-for="CardNumber" class="form-control" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
                <br />
                <div>
                    <label asp-for="ExpirationDate" class="control-label">ExpirationDate</label>
                    <input asp-for="ExpirationDate" class="form-control" type="month" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CVV" class="control-label">CVV</label>
                            <input asp-for="CVV" class="form-control" />
                            <span asp-validation-for="CVV" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ParkingSlot.Category" class="control-label">@Model.ParkingSlot.Category</label>
                            <input asp-for="ParkingSlot.Category" class="form-control" disabled />
                            <span asp-validation-for="ParkingSlot.Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div>
                <input type="submit" value="Pay" class="btn btn-primary" />
                <input type="submit" value="Cancel" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>