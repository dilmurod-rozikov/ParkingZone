@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ParkingZoneApp.Models.Entities.Reservation
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Reservation</h1>
<h3 style="color: orangered">Are you sure you want to delete this?</h3>
<div style="background-color: #39a0ca; color: white; padding: 20px;font-size: 20px; border-radius: 10px">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartingTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartingTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleNumber)
        </dd>
        <dt class="col-sm-2">
            Slot @Html.DisplayNameFor(model => model.ParkingSlot.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkingSlot.Number)
        </dd>
    </dl>
</div>
<br />
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" value="Delete" class="btn btn-danger">
        <i class="bi bi-trash">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
            </svg>
        </i>
    </button>
</form>
